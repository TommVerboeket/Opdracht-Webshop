@page
@model KE03_INTDEV_SE_1_Base.Pages.BestelgeschiedenisModel
@{
    ViewData["Title"] = "Bestelgeschiedenis";
}

<h1>Bestelgeschiedenis</h1>

@if (Model.Bestellingen.Any())
{
    <ul>
        @foreach (var order in Model.Bestellingen)
        {
            <li style="margin-bottom: 24px;">
                <strong>@order.OrderDate.ToString("g")</strong>
                <br />
                Klant: @order.CustomerName, @order.CustomerAddress
                <ul>
                    @foreach (var product in order.Products)
                    {
                        <li>
                            @product.Name (@product.Quantity) - € @(product.Price * product.Quantity)
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
}
else
{
    <p>Geen bestellingen gevonden.</p>
}
